<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Admin Portal</title>
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <form class="signup-form" action="/register" method="POST">

      <!-- form header -->
      <div class="form-header">
        <h1>Register Here</h1>
      </div>

      <!--a form body -->
      <div class="form-body">

        <!-- Firstname and Lastname -->
        <div class="horizontal-group">
          <div class="form-group left">
            <label for="firstname" class="label-title">First name *</label>
            <input name="firstname" value="first name" type="text" id="firstname" class="form-input" placeholder="enter your first name" autocomplete="off"/>
          </div>
          <div class="form-group right">
            <label for="lastname" value="firstname" class="label-title">Last name</label>
            <input name="lastname" value="lastname" type="text" id="lastname" class="form-input" placeholder="enter your last name" autocomplete="off"/>
          </div>
        </div>

        <!-- Email -->
        <div class="form-group">
          <label for="email" class="label-title">Email*</label>
          <input name="email" value="email@gmail.com" type="email" id="email" class="form-input" placeholder="enter your email" autocomplete="off">
        </div>

        <!-- Passwrod and confirm password -->
        <div class="horizontal-group">
          <div class="form-group left">
            <label for="password" class="label-title">Password *</label>
            <input name="pass" type="password" value="123" id="password" class="form-input" placeholder="enter your password" autocomplete="off">
          </div>
          <div class="form-group right">
            <label for="confirm-password" class="label-title">Confirm Password *</label>
            <input name="cpass" type="password" value="123" class="form-input" id="confirm-password" placeholder="enter your password again" autocomplete="off">
          </div>
        </div>

        <!-- Gender -->
        <div class="horizontal-group">
          <div class="form-group left">
            <label class="label-title">Gender:</label>
            <div class="input-group">
              <label for="male"><input type="radio" name="gender" value="male" id="male"> Male</label>
              <label for="female"><input type="radio" name="gender" value="female" id="female"> Female</label>
            </div>
          </div>
        </div>

        <!-- age -->
        <div class="horizontal-group">
          <div class="form-group right">
            <label for="experience" name="age" class="label-title">Age</label>
            <input type="number" name="age" min="18" max="80"  value="18" class="form-input" autocomplete="off">
          </div>
        </div>

      </div>

      <!-- form-footer -->
      <div class="form-footer">
        <span>* required</span>
        <input type="submit" class="btn" value="Submit"/>
      </div>

    </form>

  </body>
</html>